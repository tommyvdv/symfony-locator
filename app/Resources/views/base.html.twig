<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset="utf-8" />
        <title>{% block title %}locator{% endblock %} - locator</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
            {% stylesheets
                'css/*'
            %}
                <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        <section id="wrapper">
            <header id="header">
                <div class="top">
                    {% block navigation %}
                        <nav>
                            <ul class="navigation">
                                <li><a href="{{ path('locator_location_homepage') }}">Home</a></li>
                                <li><a href="{{ path('locator_location_about') }}">About</a></li>
                                <li><a href="{{ path('locator_location_contact') }}">Contact</a></li>
                            </ul>
                        </nav>
                    {% endblock %}
                </div>

                <hgroup>
                    <hgroup>
                        <h2>{% block locator_title %}<a href="{{ path('locator_location_homepage') }}">locator</a>{% endblock %}</h2>
                        <h3>{% block locator_tagline %}<a href="{{ path('locator_location_homepage') }}">locations galore</a>{% endblock %}</h3>
                    </hgroup>
                </hgroup>
            </header>

            <section class="main-col">
                {% block body %}{% endblock %}
            </section>

            <aside class="sidebar">
                {% block sidebar %}{% endblock %}
            </aside>

            <div id="footer">
                {% block footer %}
                    footer
                {% endblock %}
            </div>
        </section>

        {% block javascripts %}{% endblock %}
    </body>
</html>
